<div class="row">
    <div class="col s6 offset-s3">
        <form method="PATCH" action="/change_password">
            <ul class="collection with-header">
                <li class="collection-item"><h3>{{name}}</h3></li>
                <li class="collection-item"><h3>Email: {{email}}</h3></li>
                <li class="collection-item">Your old password: <input type="password" name="oldPassword">
                Your new password: <input type="password" name="newPassword">
                {{#if success_messages }}
                    <div class="green-text text-darken-2">{{success_messages}}</div>
                {{/if}}
                {{#if error_messages }}
                    <div class="red-text text-darken-2">{{error_messages}}</div>
                {{/if}}
                <button class= "btn waves-effect waves-light" style="margin-left: 0.2rem; margin-top: 0.6rem" type="submit">Change password</button></li>
            </ul>
        </form>
    </div>
</div>    