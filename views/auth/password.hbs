<div class="row">
  <div class="col s6 offset-s3">
    <h1>Input new password</h1>
    <form action="/password" method="POST">
      <div class="input-field">
        <input id="password" name="password" type="password" class="validate" required>
        <label for="password">New password</label>
        <span class="helper-text" data-error="Input new password"></span>
      </div>

      <div class="input-field">
        <input id="cpassword" name="cpassword" type="password" class="validate" required>
        <label for="cpassword">Confirm password</label>
        <span class="helper-text" data-error="Confirm new password"></span>
      </div>
      
      {{#if error_messages }}
      <div class="red-text text-darken-2 col s6 offset-s3" style="margin-bottom: 1rem;">{{error_messages}}</div>
      {{/if}}

      <input type="hidden" name="userId" value="{{userId}}">
      <input type="hidden" name="token" value="{{token}}">
      <button type="submit" class="btn btn-primary">SUBMIT</button>
    </form>
  </div>
</div>